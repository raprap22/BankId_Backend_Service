{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "rootDir": "src",
    "outDir": "dist",
    "skipLibCheck": true,
    "typeRoots": ["./types", "./node_modules/@types"],
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  }
}
